				    </c:if>
				    
				    <div class="form-group col-sm-12">
				        <label class="control-label no-padding-right">Tên nhà cung cấp</label>
				        <input type="text" class="form-control col-sm-6" id="tenNCC" name="tenNCC"  placeholder="Nhập tên nhà cung cấp" value="${model.tenNCC}"/>
				    </div> 
				     <div class="form-group col-sm-12">
				        <label class="control-label no-padding-right">Địa chỉ nhà cung cấp</label>
				        <input type="text" class="form-control col-sm-6 " id=diaChiNCC name="diaChiNCC" placeholder="Nhập địa chỉ nhà cung cấp " value="${model.diaChiNCC}"/>
				    </div>
				    <div class="form-group col-sm-6">
				        <label class="control-label no-padding-right">Số điện thoại</label>
				        <input type="text" class="form-control col-sm-6" id="SDT" name="SDT" placeholder="Nhập đủ 10 số " value="${model.SDT}"/>
				    </div>    
				     <div class="form-group col-sm-12">
				        <label class="control-label no-padding-right">Nhân viên liên hệ</label>
				        <input type="text" class="form-control col-sm-6" id="nhanVienLienHe" name="nhanVienLienHe" placeholder="Nhập tên nhân viên liên hệ" value="${model.nhanVienLienHe}"/>
				    </div>    
				    <div class="form-group col-sm-12 pt-5">
				        <c:if test="${not empty model.maNCC}">
				            <input type="button" class="btn btn-white btn-warning btn-bold" value="Cập nhật nhà cung cấp " id="btnAddOrUpdateNew"/>
				        </c:if>
				        <c:if test="${empty model.maNCC}">
				            <input type="button" class="btn btn-white btn-warning btn-bold" value="Thêm nhà cung cấp" id="btnAddOrUpdateNew"/>
